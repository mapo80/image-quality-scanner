<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <!-- Ensure runtime-specific native libraries are copied -->
    <!-- Target Ubuntu 18.04 by default so that the matching runtime
         package provides the native OpenCvSharpExtern library. -->
    <RuntimeIdentifier Condition="'$(RuntimeIdentifier)' == ''">ubuntu.18.04-x64</RuntimeIdentifier>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="OpenCvSharp4" Version="4.6.0.20220608" />
    <!--
      Use the Ubuntu 18.04 runtime build of OpenCvSharp to ensure the
      native OpenCvSharpExtern library is available on most Linux
      distributions without requiring additional system libraries.
    -->
    <PackageReference Include="OpenCvSharp4.runtime.ubuntu.18.04-x64" Version="4.6.0.20220608" />
  </ItemGroup>

</Project>
